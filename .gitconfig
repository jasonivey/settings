[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  d = diff
  lg = log -p
	gerrit = !/usr2/bin/gerrit-flow/gerrit.py

[color]
	ui = true
[core]
	whitespace = cr-at-eol
[diff]
    tool = bc3
[difftool "bc3"]
    cmd = "/usr/bin/bcompare" "-solo" "$LOCAL" "$REMOTE"
