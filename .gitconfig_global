[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    d = diff
    ld = log -p
    last = log -1 HEAD
    unstage = reset HEAD --
    latest = checkout
    save = stash save
    unsave = stash apply
[color]
    ui = true
[core]
    whitespace = cr-at-eol
    excludesfile = /Users/jasoni/.gitignore_global
    pager = delta --dark --plus-color="#012800" --minus-color="#340001" --theme="zenburn"
[pager]
    difftool = true
[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    prompt = false
    cmd = icdiff --highlight --line-numbers -L \"$BASE\" -L \"$REMOTE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[commit]
    template = /Users/jasoni/.git_commit_template.txt
